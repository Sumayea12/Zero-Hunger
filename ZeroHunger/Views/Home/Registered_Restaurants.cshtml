
@{
    ViewBag.Title = "Registered_Restaurants";
    Layout = "~/Views/Shared/_RestaurantRegistrationLayout.cshtml";
}


@model List<ZeroHunger.DTOs.RegisteredRestaurantDTO>

<h2>Registered Restaurants</h2>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Contact Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model)
        {
            <tr>
                <td>@restaurant.Id</td>
                <td>@restaurant.RestaurantName</td>
                <td>@restaurant.Location</td>
                <td>@restaurant.ContactNumber</td>
            </tr>
        }
    </tbody>
</table>
