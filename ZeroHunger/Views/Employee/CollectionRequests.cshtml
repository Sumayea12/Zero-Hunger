
@{
    ViewBag.Title = "CollectionRequests";
    Layout = "~/Views/Shared/_RestaurantRegistrationLayout.cshtml";
}

@model List<ZeroHunger.DTOs.CollectionRequestDTO>

<h2>Collection Requests</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <p>@ViewBag.Message</p>
}
else
{

    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>

    <form method="post" action="@Url.Action("CollectionRequests", "Employee")">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Restaurant Id</th>
                    <th>Food Name</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Max Preservation Time</th>
                    <th>Collect Time</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].Id</td>
                        <td>@Model[i].RestaurantId</td>
                        <td>@Model[i].FoodName</td>
                        <td>@Model[i].Quantity</td>
                        <td>@Model[i].Status</td>
                        <td>@Model[i].Date</td>
                        <td>@Model[i].MaxPreservationTime</td>
                        <td>
                            <input type="time" name="CollectionRequests[@i].CollectTime" value="@Model[i].CollectTime?.ToString(" yyyy-MM-ddTHH:mm")" />
                            <input type="hidden" name="CollectionRequests[@i].Id" value="@Model[i].Id" />
                        </td>
                        <td>
                            <button type="submit" name="SelectedRow" value="@i">Submit</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>


}


